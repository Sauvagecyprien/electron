
<div class="container  p-5">


    <h1 class="text-center">Affichage des Individus :</h1>
    <br/>
    <div class="card">

        <div class="card-body">
            <div id="alertmsg" class="w-50 mx-auto my-3">
                <% if (error_message.length != 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show my-0 py-1 d-flex" role="alert">
                        <strong><%= error_message %></strong>
                        <button type="button" class="close p-0 mr-2" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>

                <% if (success_message.length != 0) { %>
                    <div class="alert alert-success alert-dismissible fade show my-0 py-1 d-flex" role="alert">
                        <strong><%= success_message %></strong>
                        <button type="button" class="close p-0 mr-2" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                <% } %>
            </div>
            <ul class="nav justify-content-center">



                <li class="nav-item">
                    <a class="nav-link" href="#">resultat du echo des donn√©e user</a>
                </li>

            </ul>
            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th scope="col">#id</th>
                    <th scope="col">nom</th>
                    <th scope="col">prenom</th>
                    <th scope="col">entreprise</th>
                    <th scope="col">email</th>
                </tr>
                </thead>
                <tbody>

                <% for(var i=0; i<test.length; i++) {%>
                    <tr>
                        <th scope="row"><%= test[i].id %></th>
                        <td><%= test[i].nom %></td>
                        <td><%= test[i].prenom %></td>
                        <td><%= test[i].entreprise %></td>
                        <td><%= test[i].email %></td>
                        <td><form action="/updateuser/<%= test[i].id %>" method="post"><button type="submit" class="btn btn-dark btn-block">modifier</button></form></td>
                        <td><form action="/deleteuser/<%= test[i].id %>" method="post"><button type="submit" class="btn btn-dark btn-block">supprimer</button></form></td>

                    </tr>
                <% } %>


                </tbody>
            </table>

        </div>


    </div>

</div>
