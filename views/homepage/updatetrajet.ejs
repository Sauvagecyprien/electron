<%- include('../includes/layout-update') -%>

<div class="content">
    <div class="container-fluid">
        <div class="section">

            <div class="card">
                <div class="card-header">

                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="text-center">modification d'un trajet </h1>
                            <br/>
                            <div class="card">

                                <div class="card-body">
                                    <form action="/uptrajet" method="post">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Id_vehicules : </label>
                                            <input type="hidden" name="id" value="<%= trajet.id %>">
                                            <input type="text" class="form-control" name="id_vehicules" id="exampleInputEmail1" value="<%= trajet.id_vehicules %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Date : </label>
                                            <input type="text" class="form-control" name="date" id="exampleInputEmail1" value="<%= trajet.date %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Trajet_start : </label>
                                            <input type="text" class="form-control" name="trajet_start" id="exampleInputEmail1" value="<%= trajet.trajet_start %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Trajet_end : </label>
                                            <input type="text" class="form-control" name="trajet_end" id="exampleInputEmail1" value="<%= trajet.trajet_end %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Commentaire : </label>
                                            <input type="text" class="form-control" name="commentaire" id="exampleInputEmail1" value="<%= trajet.commentaire %>">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Type_deplacement : </label>
                                            <input type="text" class="form-control" name="type_deplacement" id="exampleInputEmail1" value="<%= trajet.type_deplacement %>">
                                        </div>

                                        <button type="submit" id="buttons" class="btn btn-dark btn-block">Modifier</button>
                                    </form>
                                </div>


                            </div>

                        </div>
                    </div>
                </div></div></div></div></div>

<%- include('../includes/footer-update') -%>