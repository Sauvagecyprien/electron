<div class="container  p-5">

    <h1 class="text-center">premiere application ElectronJS</h1>
    <br/>
    <div class="card">

        <div class="card-body">

            <div id="message"><div id="alertmsg" class="w-50 mx-auto my-3">
                    <% if (error_message.length != 0) { %>
                        <div class="alert alert-danger alert-dismissible fade show my-0 py-1 d-flex" role="alert">
                            <strong><%= error_message %></strong>
                            <button type="button" class="close p-0 mr-2" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>

                    <% if (success_message.length != 0) { %>
                        <div class="alert alert-success alert-dismissible fade show my-0 py-1 d-flex" role="alert">
                            <strong><%= success_message %></strong>
                            <button type="button" class="close p-0 mr-2" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    <% } %>
                </div></div>

            <form method="post"  action="/log" id="connexion">
                <div class="form-group">
                    <label>Adresse E-mail : </label>
                    <input type="text" class="form-control" name="email" id="email" required>
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password"  name="password" class="form-control" id="password" required>
                </div>
                <button type="submit" class="btn btn-dark btn-block">Connexion</button>
            </form>


        </div>


    </div>

</div>

