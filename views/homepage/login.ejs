
<div class="container  p-5">

    <h1 class="text-center">Se connecter</h1>
    <br/>
    <div class="card">

        <div class="card-body">

            <div id="message">
                <div id="alertmsg" class="w-50 mx-auto my-3">
                    <% if (error_message.length != 0) { %>
                        <div class="alert alert-danger">
                            <button type="button" aria-hidden="true" class="close" data-dismiss="alert">
                                <i class="nc-icon nc-simple-remove"></i>
                            </button>
                            <span>
                            <b> Error- </b><%= error_message %></span>
                        </div>

                    <% } %>

                    <% if (success_message.length != 0) { %>
                            <div class="alert alert-success">
                                <button type="button" aria-hidden="true" class="close" data-dismiss="alert">
                                    <i class="nc-icon nc-simple-remove"></i>
                                </button>
                                <span>
                                    <b> Success - </b> <%= success_message %></span>
                            </div>
                    <% } %>
                </div>
            </div>


            <form method="post"  action="/log" id="connexion">
                <div class="form-group">
                    <label>Adresse E-mail : </label>
                    <input type="text" class="form-control" name="email" id="email" required>
                </div>
                <div class="form-group">
                    <label>Mot de passe</label>
                    <input type="password"  name="password" class="form-control" id="password" required>
                </div>
                <button type="submit" class="btn btn-dark btn-block">Connexion</button>
            </form>


        </div>


    </div>

</div>

