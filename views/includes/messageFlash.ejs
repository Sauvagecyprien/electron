<div id="alertmsg" class="w-50 mx-auto my-3">
    <% if (error_message.length != 0) { %>
        <div class="alert alert-danger alert-dismissible fade show my-0 py-1 d-flex" role="alert">
            <strong><%= error_message %></strong>
            <button type="button" class="close p-0 mr-2" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>

    <% if (success_message.length != 0) { %>
        <div class="alert alert-success alert-dismissible fade show my-0 py-1 d-flex" role="alert">
            <strong><%= success_message %></strong>
            <button type="button" class="close p-0 mr-2" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% } %>
</div>